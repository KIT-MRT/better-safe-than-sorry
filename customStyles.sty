\ProvidesPackage{customStyles}

% Sans serif font in SVG figures
%
% as single command (doesn't work for includesvg pretex)
% \newcommand{svgfont}[1]{\textls[30]{\robotoMedium{#1}}}
%
% as environment (pretex=\begin{svgfont},apptex=\end{svgfont})
\newenvironment{svgfont}{%
  % before
  \footnotesize%
  \renewcommand{\textbf}{}% ignore textbf generated by Inkscape
}{%
  % after
}
\newenvironment{svgfontonly}{%
% before
\sffamily%
}{%
% after
}

% English in SVG figures
%
\newenvironment{svglang}{%
  % before
	\sisetup{locale = US}% switch to English in siunitx
	% \begin{otherlanguage*}{english}% this might also work
}{%
  % after
	% \end{otherlanguage*}%
}

% Resize SVG figures of arbitration graphs to compensate their white margin
% first option: target width of the figure (typically \columnwidth)
% second option: includesvg command
\newcommand{\resizeArbitratorSVGfactor}{1.1}
\NewDocumentCommand{\resizeArbitratorSVG}{O{} O{}}{%
  \parbox{#1}{\hspace{-0.05#1}\resizebox{\resizeArbitratorSVGfactor#1}{!}{#2}}
}

